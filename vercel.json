{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
     { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "rewrites": [
    { "source": "/modern/(.*)", "destination": "/modern/$1" },
    { "source": "/legacy/(.*)", "destination": "/legacy/$1" },
    { "source": "/", "destination": "/index.html" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "cleanUrls": true
}
